# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Set to "true" to request all Google scopes at once (may cause timeout issues)
GOOGLE_USE_ALL_SCOPES=false

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# MongoDB Configuration
# Use MONGODB_URI or MONGODB_CONNECTION_STRING (either works)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=db1

# Optional: Node Environment
NODE_ENV=development

# Optional: Timeout Configuration (in milliseconds)
# Increase these if you're experiencing timeout issues
OAUTH_TIMEOUT=15000
TOKEN_REFRESH_TIMEOUT=15000

# Optional: Debug Mode
DEBUG=false
